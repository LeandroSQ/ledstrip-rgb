<resources xmlns:tools="http://schemas.android.com/tools">

	<style name="Theme.App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

		<item name="fontFamily">@font/permanent_marker</item>
		<item name="android:windowBackground">@color/light_background</item>
		<item name="android:textColor">@color/light_foreground</item>
		<item name="colorControlHighlight">@color/white</item>
		<item name="android:actionBarStyle">@style/Theme.ActionBar</item>

		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/fab_foreground</item>
		<item name="colorPrimaryVariant">@color/darker_fab_foreground</item>
		<item name="colorOnPrimary">@color/white</item>

		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/fab_background</item>
		<item name="colorSecondaryVariant">@color/fab_background</item>
		<item name="colorOnSecondary">@color/dark_gray</item>

		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

	</style>

	<style name="Theme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
		<item name="background">@color/fab_foreground</item>
		<item name="android:textColor">@color/white</item>
	</style>

</resources>